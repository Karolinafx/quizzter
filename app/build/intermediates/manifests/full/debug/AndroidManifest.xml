<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.quezzter"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="15"
        android:targetSdkVersion="19" />

    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name="com.example.quezzter.MainActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.example.quezzter.Login"
            android:label="@string/title_activity_login" >
        </activity>
        <activity
            android:name="com.example.quezzter.Register"
            android:label="@string/title_activity_register" >
        </activity>
        <activity
            android:name="com.example.quezzter.Play"
            android:label="@string/title_activity_play" >
        </activity>
        <activity
            android:name="com.example.quezzter.Quiz"
            android:label="@string/title_activity_quiz" >
        </activity>
        <activity
            android:name="com.example.quezzter.Result"
            android:label="@string/title_activity_result" >
        </activity>
        <activity
            android:name="com.example.quezzter.StartPlay"
            android:label="@string/title_activity_start_play" >
        </activity>
    </application>

</manifest>